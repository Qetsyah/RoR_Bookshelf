<div class="flex flex-col mx-auto">
  <div class="flex flex-col mx-[250px] justify-items-center mb-6 bg-gray-200 p-3 rounded-lg">
    <h3 class="font-bold mb-12 text-3xl"><%= @book.title %></h3>
    <div class="flex flex-row ml-6 w-[600px]">
      <div class="max-w-[400px] max-h-[600px]">
          <%= image_tag @book.cover_url %>
      </div>
      <div class="ml-12">
        <p class="mb-12">
          <%= @book.genre.humanize %>
        </p>
        <p class="">
          <%= @book.description %>
        </p>
      </div>
    </div>
  </div>
</div>
