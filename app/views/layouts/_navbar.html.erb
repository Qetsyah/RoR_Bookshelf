<div class="flex flex-row justify-between p-6 mb-12">
  <button class="text-2xl font-extrabold bg-purple-300 rounded-lg px-8 py-4 text-white"> <%= link_to "Bookshelf", root_path %></button>
  <div class="flex flex-row justify-center text-center h-full my-auto">
    <%= link_to "Add New Book", new_book_path, class:'p-2 mr-2 bg-purple-300 rounded-lg text-white' %>
    <% if user_signed_in? %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, class:'p-2 mr-2 bg-purple-300 rounded-lg text-white' %>
    <% else %>
      <%= button_to "Sign in", new_user_session_path, class:'p-2 mr-2 bg-purple-300 rounded-lg text-white' %>
    <% end %>
  </div>
</div>
